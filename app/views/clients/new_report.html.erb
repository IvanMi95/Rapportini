<%= form_with url: create_new_report_client_path, method: :post do |f| %>
  
  <%= f.label :description, "Lavoro svolto" %>
  <%= f.text_area :description, class: 'form-control' %> 

  <%= f.label :material, "Materiale usato" %>
  <%= f.text_field :material, class: 'form-control' %>

  <%= f.label :hours, "Ore lavorate" %>
  <%= f.number_field :hours, class: 'form-control' %>
  
  <%= f.hidden_field :user_id, value: current_user.id %>
  
  <%= f.submit "Conferma", class: "btn btn-primary" %>
<% end %>